<h4>Add a New Image</h4>

<form class="form-horizontal">

  <div class="form-group">
    <label class="col-xs-12 col-sm-2 control-label">
      Title
    </label>
    <div class="col-xs-12 col-sm-10">
      {{input class="form-control" id="title" placeholder="Image Title"
      type="text" value=art.title}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-xs-12 col-sm-2 control-label">
      Caption
    </label>
    <div class="col-xs-12 col-sm-10">
      {{input class="form-control" id="caption" placeholder="Image Caption"
      type="text" value=art.caption}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-xs-12 col-sm-2 control-label">
      Image
    </label>
    <div class="col-xs-12 col-sm-10">
      {{#file-picker
        accept=".jpg,.jpeg,.gif,.png"
        fileLoaded="fileLoaded"
        readAs="readAsDataURL"}}
        <span class="">Drag here or CLICK to upload a file</span>
      {{/file-picker}}
      {{#if file}}
      <span class="">Click on preview to choose a different Image.</span>
      {{/if}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
      <button {{action "submit"}} class="btn btn-default" type="submit">
        Add Image to Collection
      </button>
    </div>
  </div>
</form>

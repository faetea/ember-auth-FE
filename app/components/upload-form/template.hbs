<form class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-xs-12 col-sm-3 control-label">
      Collection Name</label>
    <div class="col-xs-12 col-sm-9">
      {{input type="text"
              id="name"
              placeholder="Collection Name"
              value=name
              class="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label for="cover" class="col-xs-12 col-sm-3 control-label">
      Cover Image</label>
    <div class="col-xs-12 col-sm-9">
      <input type="file" id="cover" value=cover>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-3 col-sm-9">
      <button {{action "submit"}} type="submit" class="btn btn-default">
        Upload Image</button>
    </div>
  </div>
</form>

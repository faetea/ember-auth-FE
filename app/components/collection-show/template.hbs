<ol class="breadcrumb">
  <li>{{#link-to "collections"}}Browse Collections{{/link-to}}</li>
  <li class="active">{{collection.name}}</li>
</ol>

<div class="panel panel-default">
  <div class="cover-image" style={{backgroundImage}}>
      <h1 class="text-right">{{collection.name}}</h1>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <p class="lead">{{collection.desc}} <span class="author">- {{collection.user.email}}</span></p>
    <div class="text-right button-space-show">
      {{yield}}
    </div>
  </div>
</div>

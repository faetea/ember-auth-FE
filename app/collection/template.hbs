<h3>Specific Collection - {{model.name}}</h3>

<div class="col-xs-12 col-sm-12 col-md-12">
  <div class="collection">
    <img src={{model.mediumUrl}}/>
    <h4>{{model.user.email}}, {{model.desc}}</h4>
  </div>
</div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalArt">
  Add Image
</button>
{{modal-art collection=model submit="createArt"}}


<h4>All Images in Collection</h4>

{{#each model.arts as |art|}}
<div class="col-xs-12 col-sm-6 col-md-6">
  <div>
    {{#link-to "art" art}}
      <img src={{art.smallUrl}}>
    {{/link-to}}
    <p><strong>{{art.title}}</strong> {{art.caption}}</p>
    {{!-- <small>{{art.collection.name}} by {{art.collection.user.email}}</small> --}}
  </div>
</div>
{{else}}
  <h4>This image collection is empty.</h4>
{{/each}}
